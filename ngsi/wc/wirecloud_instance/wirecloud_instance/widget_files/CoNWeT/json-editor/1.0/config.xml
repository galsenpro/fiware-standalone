    <smartphoneimage>images/catalogueSmartphone.png</smartphoneimage>
    <license>Apache License 2.0</license>
    <licenseurl>http://www.apache.org/licenses/LICENSE-2.0.html</licenseurl>
    <homepage>https://github.com/Wirecloud/json-editor-widget</homepage>
    <issuetracker>https://github.com/Wirecloud/json-editor-widget/issues</issuetracker>
    <changelog>doc/changelog.md</changelog>
    <doc>doc/userguide.md</doc>
  </details>
  <requirements>
      <feature name="StyledElements"/>
  </requirements>
  <wiring>
    <inputendpoint name="input" type="text" label="Input" description="Data to be edited" friendcode="*"/>
    <inputendpoint name="configure" type="text" label="Configuration" description="Configuration to use in the JSON editor" friendcode="json-editor-config"/>
    <outputendpoint name="output" type="text" label="Output" description="Modified data" friendcode="*"/>
  </wiring>
  <contents src="index.html" useplatformstyle="true"/>
  <rendering height="470px" width="25%"/>
</widget>
