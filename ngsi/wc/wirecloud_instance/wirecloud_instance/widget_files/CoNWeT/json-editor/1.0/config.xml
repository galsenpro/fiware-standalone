<?xml version='1.0' encoding='UTF-8'?>
<widget xmlns="http://wirecloud.conwet.fi.upm.es/ns/macdescription/1" vendor="CoNWeT" name="json-editor" version="1.0">
  <details>
    <title>JSON Editor</title>
    <email>aarranz@conwet.com</email>
    <description>Simple JSON editor allowing you to view, edit, format and validate JSON structures</description>
